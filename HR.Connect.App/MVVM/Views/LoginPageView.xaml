<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HR.Connect.App.MVVM.Views.LoginPageView"
             Title="LoginPageView">

    <ScrollView>
        
        <Grid RowDefinitions=".2*, .05*, .05*, .1*" RowSpacing="0.5">
            <Label Grid.Row="0" HorizontalOptions="Center" Text="HR-Connect-App" TextColor="AntiqueWhite" FontSize="Header" FontAttributes="Bold"/>

            <Entry Grid.Row="1" Placeholder="UserName" TextColor="AntiqueWhite" HeightRequest="10" WidthRequest="100"
                    HorizontalOptions="Center" VerticalOptions="Center"/>
            <Entry Grid.Row="2" Placeholder="Password" TextColor="AntiqueWhite" HeightRequest="10" WidthRequest="100"
                    HorizontalOptions="Center" VerticalOptions="Center" IsPassword="True"/>
            <Button  Grid.Row="3" Text="Submit" BackgroundColor="YellowGreen" HorizontalOptions="Center" VerticalOptions="Center"
                    WidthRequest="100" HeightRequest="5" Clicked=""/>


        </Grid>
    </ScrollView>
</ContentPage>