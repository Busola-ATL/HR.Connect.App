<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HR.Connect.App.MVVM.Views.LoginPageView"
             Title="LoginPageView">

    <Grid x:Name="Container">
        <Frame Margin="10, 0, 10, 0" VerticalOptions="Center">
            <VerticalStackLayout Spacing="12" VerticalOptions="Center">
                <Label Text="HR_Connect-App" FontAttributes="Bold" FontSize="Large" HorizontalTextAlignment="Center"/>
                <Label Text="UserName" FontAttributes="Bold"/>
                <Entry Placeholder="UserName" TextColor="Black"
                   FontSize="15" FontAttributes="Bold" x:Name="User" />
                <Label Text="Password" FontAttributes="Bold"/>
                <Entry Placeholder="Password" TextColor="Black" 
                       IsPassword="True" FontSize="15"
                       FontAttributes="Bold" x:Name="password"/>
                <Button Text="Login" BackgroundColor="DarkRed" Clicked="Button_Clicked"/>

            </VerticalStackLayout>
        </Frame>
    </Grid>
</ContentPage>